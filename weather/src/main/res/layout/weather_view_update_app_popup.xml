<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/weather_dp_267"
        android:layout_height="@dimen/weather_dp_212"
        android:background="@mipmap/bg_update">

        <LinearLayout
            android:id="@+id/ll_close"
            android:layout_width="@dimen/weather_dp_30"
            android:layout_height="@dimen/weather_dp_30"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/weather_dp_10"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/update_close" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/weather_dp_25"
            android:layout_marginTop="@dimen/weather_dp_60"
            android:text="版本号1.0.1"
            android:textColor="@color/white"
            android:textSize="@dimen/weather_sp_10" />

        <TextView
            android:id="@+id/tv_update"
            android:layout_width="@dimen/weather_dp_200"
            android:layout_height="@dimen/weather_dp_40"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/weather_dp_140"
            android:background="@drawable/weather_update_btn_bg"
            android:gravity="center"
            android:text="立即更新"
            android:textColor="@color/white"
            android:textSize="@dimen/weather_sp_15" />
    </RelativeLayout>

</LinearLayout>