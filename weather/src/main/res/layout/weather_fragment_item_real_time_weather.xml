<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.lnkj.weather.ui.realweather.RealTimeWeatherViewModel" />

        <variable
            name="cityWeather"
            type="com.lnkj.library_base.db.bean.CityWeather" />
    </data>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        app:srlEnableLoadMore="false">

        <com.lnkj.weather.widget.refreshheader.WeatherClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="@dimen/weather_dp_20"/>

        <FrameLayout
            android:id="@+id/cl_main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">


            <androidx.core.widget.NestedScrollView
                android:id="@+id/nested_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvTemperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/white"
                        android:textSize="100sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="°"
                        android:textColor="@color/white"
                        android:textSize="100sp"
                        app:layout_constraintStart_toEndOf="@+id/tvTemperature"
                        app:layout_constraintTop_toTopOf="@+id/tvTemperature" />

                    <TextView
                        android:id="@+id/tvWeatherName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@{cityWeather.weatherName}"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tvTemperature"
                        app:layout_constraintStart_toEndOf="@+id/tvTemperature" />

                    <ImageView
                        android:id="@+id/ivPlayAudio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:src="@mipmap/weather_icon_trumpet"
                        app:layout_constraintBottom_toBottomOf="@+id/tvWeatherName"
                        app:layout_constraintStart_toEndOf="@+id/tvWeatherName"
                        app:layout_constraintTop_toTopOf="@+id/tvWeatherName" />

                    <LinearLayout
                        android:id="@+id/ll_air_quality"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/weather_shape_early_warning_bg"
                        android:gravity="center_vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tvTemperature">

                        <ImageView
                            android:id="@+id/iv_air"
                            android:layout_width="@dimen/weather_dp_11"
                            android:layout_height="@dimen/weather_dp_15"
                            android:layout_marginStart="10dp" />

                        <TextView
                            android:id="@+id/tv_air_quality"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="6dp"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            tools:text="优 27" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_alert"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ll_air_quality" />

                    <LinearLayout
                        android:id="@+id/ll_weather_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="@+id/tvTemperature"
                        app:layout_constraintTop_toBottomOf="@+id/tvTemperature">

                        <!--风向-->
                        <TextView
                            android:id="@+id/tv_wind_direction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{cityWeather.windDirection}"
                            android:textColor="#b3ffffff"
                            android:textSize="14sp" />

                        <!--风速-->
                        <TextView
                            android:id="@+id/tv_wind_speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="@{cityWeather.windSpeed}"
                            android:textColor="#ffffff"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="13dp"
                            android:text="湿度"
                            android:textColor="#b3ffffff"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_humidity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="@{cityWeather.humidity}"
                            android:textColor="#ffffff"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="13dp"
                            android:text="紫外线"
                            android:textColor="#b3ffffff"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_air_pressure"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="@{cityWeather.airPressure}"
                            android:textColor="#ffffff"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvRainTip"
                        android:layout_width="@dimen/weather_dp_250"
                        android:layout_height="27dp"
                        android:layout_marginTop="15.33dp"
                        android:background="@drawable/weather_bg_hout_alert"
                        android:drawableStart="@mipmap/weather_icon_small_bell"
                        android:drawableEnd="@mipmap/weather_icon_arrow_right_white"
                        android:drawablePadding="10dp"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:paddingEnd="10dp"
                        android:singleLine="true"
                        android:text="@{cityWeather.rainTip}"
                        android:textColor="@color/white"
                        android:textSize="13.33dp"
                        app:layout_constraintStart_toStartOf="@+id/ll_weather_info"
                        app:layout_constraintTop_toBottomOf="@+id/ll_weather_info" />


                    <LinearLayout
                        android:id="@+id/ll_today_tomorrow_weather"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="84dp"
                        android:background="@drawable/weather_bg_top_write"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/tvRainTip">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_today_weather"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/tvToday"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="18dp"
                                android:layout_marginTop="12dp"
                                android:text="今天"
                                android:textColor="@color/weather_color_222222"
                                android:textSize="@dimen/weather_sp_14"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_today_air_level"
                                android:layout_width="wrap_content"
                                android:layout_height="12dp"
                                android:layout_marginLeft="@dimen/weather_dp_10"
                                android:layout_marginTop="@dimen/weather_dp_4"
                                android:gravity="center"
                                android:paddingStart="6dp"
                                android:paddingEnd="6dp"
                                android:textColor="#fff"
                                android:textSize="@dimen/weather_sp_8"
                                app:layout_constraintLeft_toRightOf="@+id/tvToday"
                                app:layout_constraintTop_toTopOf="@+id/tvToday"
                                tools:text="良" />

                            <TextView
                                android:id="@+id/tvDateToday"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{cityWeather.todayWeather.date}"
                                android:textColor="#66ffffff"
                                android:textSize="10.67dp"
                                android:visibility="gone"
                                app:layout_constraintEnd_toEndOf="@+id/tvToday"
                                app:layout_constraintStart_toStartOf="@+id/tvToday"
                                app:layout_constraintTop_toBottomOf="@+id/tvToday" />

                            <TextView
                                android:id="@+id/tvTodayTemperature"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="18dp"
                                android:text="@{@string/weather_temperature_min_max(cityWeather.todayWeather.min,cityWeather.todayWeather.max)}"
                                android:textColor="@color/weather_color_222222"
                                android:textSize="@dimen/weather_sp_13"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="@+id/tvToday"
                                app:layout_constraintStart_toStartOf="@+id/tvToday"
                                app:layout_constraintTop_toBottomOf="@+id/tvDateToday" />

                            <ImageView
                                android:id="@+id/ivTodayWeather"
                                binding_image_res="@{cityWeather.todayWeather.weatherIcon}"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginEnd="15.33dp"
                                app:layout_constraintBottom_toBottomOf="@+id/tvToday"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/tvToday" />

                            <TextView
                                android:id="@+id/tvTodayWeather"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="15.67dp"
                                android:drawableEnd="@mipmap/arrow_black"
                                android:drawablePadding="5dp"
                                android:text="@{cityWeather.todayWeather.weatherName}"
                                android:textColor="@color/weather_color_222222"
                                android:textSize="@dimen/weather_sp_13"
                                app:layout_constraintBottom_toBottomOf="@+id/tvTodayTemperature"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/tvTodayTemperature" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <View
                            android:layout_width="0.33dp"
                            android:layout_height="match_parent"
                            android:background="@color/weather_color_E1E1E1" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_tomorrow_weather"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/tvTomorrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="18dp"
                                android:layout_marginTop="12dp"
                                android:text="明天"
                                android:textColor="@color/weather_color_222222"
                                android:textSize="@dimen/weather_sp_14"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_tomorrow_air_level"
                                android:layout_width="wrap_content"
                                android:layout_height="12dp"
                                android:layout_marginLeft="@dimen/weather_dp_10"
                                android:layout_marginTop="@dimen/weather_dp_4"
                                android:gravity="center"
                                android:paddingStart="6dp"
                                android:paddingEnd="6dp"
                                android:textColor="#fff"
                                android:textSize="@dimen/weather_sp_8"
                                app:layout_constraintLeft_toRightOf="@+id/tvTomorrow"
                                app:layout_constraintTop_toTopOf="@+id/tvTomorrow"
                                tools:text="良" />

                            <TextView
                                android:id="@+id/tvDateTomorrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{cityWeather.tomorrowWeather.date}"
                                android:textColor="#66ffffff"
                                android:textSize="10.67sp"
                                android:visibility="gone"
                                app:layout_constraintEnd_toEndOf="@+id/tvTomorrow"
                                app:layout_constraintStart_toStartOf="@+id/tvTomorrow"
                                app:layout_constraintTop_toBottomOf="@+id/tvTomorrow" />

                            <TextView
                                android:id="@+id/tvTomorrowTemperature"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="18dp"
                                android:text="@{@string/weather_temperature_min_max(cityWeather.tomorrowWeather.min,cityWeather.tomorrowWeather.max)}"
                                android:textColor="@color/weather_color_222222"
                                android:textSize="@dimen/weather_sp_13"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="@+id/tvTomorrow"
                                app:layout_constraintStart_toStartOf="@+id/tvTomorrow"
                                app:layout_constraintTop_toBottomOf="@+id/tvDateTomorrow" />

                            <ImageView
                                android:id="@+id/ivTomorrowWeather"
                                binding_image_res="@{cityWeather.tomorrowWeather.weatherIcon}"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginEnd="15.33dp"
                                app:layout_constraintBottom_toBottomOf="@+id/tvTomorrow"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/tvTomorrow" />

                            <TextView
                                android:id="@+id/tvTomorrowWeather"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="15.67dp"
                                android:drawableEnd="@mipmap/arrow_black"
                                android:drawablePadding="5dp"
                                android:text="@{cityWeather.tomorrowWeather.weatherName}"
                                android:textColor="@color/weather_color_222222"
                                android:textSize="@dimen/weather_sp_13"
                                app:layout_constraintBottom_toBottomOf="@+id/tvTomorrowTemperature"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/tvTomorrowTemperature" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                    <View
                        android:id="@+id/interval1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/weather_dp_6"
                        android:background="@color/weather_color_F2F2F2"
                        app:layout_constraintTop_toBottomOf="@+id/ll_today_tomorrow_weather"/>


                    <LinearLayout
                        android:id="@+id/ll_hour_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/interval1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="43.67dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:paddingStart="18dp"
                                android:text="24小时天气"
                                android:textColor="@color/weather_color_222222"
                                android:textSize="16.67sp" />

                            <TextView
                                android:id="@+id/tv_sunriseTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@mipmap/weather_icon_sunrisetime"
                                android:drawablePadding="@dimen/weather_dp_10"
                                android:text="@{cityWeather.lifeStyleList.get(6).sunriseTime}"
                                android:textColor="@color/weather_color_999999"
                                android:textSize="@dimen/weather_sp_13" />

                            <TextView
                                android:id="@+id/tv_sunsetTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/weather_dp_10"
                                android:layout_marginRight="@dimen/weather_dp_20"
                                android:drawableLeft="@mipmap/weather_icon_sunsettime"
                                android:drawablePadding="@dimen/weather_dp_6"
                                android:text="@{cityWeather.lifeStyleList.get(6).sunsetTime}"
                                android:textColor="@color/weather_color_999999"
                                android:textSize="@dimen/weather_sp_13" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.33dp"
                            android:background="@color/weather_color_E1E1E1" />

                        <com.lnkj.weather.widget.zzweatherview.hour.HourWeatherView
                            android:id="@+id/rv_hour_weather"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:overScrollMode="never" />


                    </LinearLayout>

                    <View
                        android:id="@+id/interval2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/weather_dp_6"
                        android:background="@color/weather_color_F2F2F2"
                        app:layout_constraintTop_toBottomOf="@+id/ll_hour_details"/>

                    <LinearLayout
                        android:id="@+id/ll_day_list_chart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/interval2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="18dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="15日天气"
                                android:textColor="@color/weather_color_222222"
                                android:textSize="16.67sp" />

                            <RadioGroup
                                android:id="@+id/rg_day_list_chart"
                                android:layout_width="wrap_content"
                                android:layout_height="26.67dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="18dp"
                                android:background="@drawable/weather_shape_day_list_chart_bg"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/rb_day_chart"
                                    android:layout_width="45.3dp"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/weather_secetor_day_chart_bg"
                                    android:button="@null"
                                    android:checked="true"
                                    android:gravity="center"
                                    android:text="趋势"
                                    android:textColor="@color/white"
                                    android:textSize="10.67sp" />

                                <RadioButton
                                    android:id="@+id/rb_day_list"
                                    android:layout_width="45.3dp"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/weather_secetor_day_chart_bg"
                                    android:button="@null"
                                    android:gravity="center"
                                    android:text="列表"
                                    android:textColor="@color/white"
                                    android:textSize="10.67sp" />

                            </RadioGroup>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.33dp"
                            android:background="@color/weather_color_E1E1E1" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_day_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:overScrollMode="never"
                                android:visibility="gone" />

                            <LinearLayout
                                android:id="@+id/rv_day_chart"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <com.lnkj.weather.widget.zzweatherview.ZzWeatherView
                                    android:id="@+id/zzWeatherView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:overScrollMode="never" />

                            </LinearLayout>

                        </FrameLayout>

                    </LinearLayout>

                    <View
                        android:id="@+id/interval3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/weather_dp_6"
                        android:background="@color/weather_color_F2F2F2"
                        app:layout_constraintTop_toBottomOf="@+id/ll_day_list_chart"/>

                    <LinearLayout
                        android:id="@+id/ll_live_index"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/interval3">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="43.67dp"
                            android:layout_marginStart="17.67dp"
                            android:gravity="center_vertical"
                            android:text="今日生活指数"
                            android:textColor="@color/weather_color_222222"
                            android:textSize="16.67sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.33dp"
                            android:background="@color/weather_color_E1E1E1" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_live_index_coat"
                            android:layout_width="match_parent"
                            android:layout_height="83dp">

                            <ImageView
                                android:id="@+id/iv_weather_clothes"
                                binding_image_res="@{cityWeather.dressLifeStyle.dressIcon}"
                                android:layout_width="@dimen/weather_dp_30"
                                android:layout_height="@dimen/weather_dp_30"
                                android:layout_marginStart="34dp"
                                android:layout_marginTop="@dimen/weather_dp_15"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_weather_clothes_tip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@{cityWeather.dressLifeStyle.indexBrf}"
                                android:textColor="@color/weather_color_222222"
                                android:textSize="12.67sp"
                                app:layout_constraintEnd_toEndOf="@+id/iv_weather_clothes"
                                app:layout_constraintStart_toStartOf="@+id/iv_weather_clothes"
                                app:layout_constraintTop_toBottomOf="@+id/iv_weather_clothes" />

                            <TextView
                                android:id="@+id/tv_weather_temperature_difference"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="30dp"
                                android:layout_marginEnd="20dp"
                                android:ellipsize="end"
                                android:layout_marginTop="@dimen/dp_4"
                                android:singleLine="true"
                                android:text="@{cityWeather.dressLifeStyle.dressTopTip}"
                                android:textColor="@color/weather_color_222222"
                                android:textSize="14sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/iv_weather_clothes"
                                app:layout_constraintTop_toTopOf="@+id/iv_weather_clothes" />

                            <TextView
                                android:id="@+id/tv_weather_live_index_tip"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="30dp"
                                android:layout_marginEnd="20dp"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="@{cityWeather.dressLifeStyle.dressBottomTip}"
                                android:textColor="#80666666"
                                android:textSize="12sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/iv_weather_clothes"
                                app:layout_constraintTop_toBottomOf="@+id/iv_weather_clothes" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.33dp"
                            android:background="@color/weather_color_E1E1E1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="89.67dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/ll_live_index_umbrella"
