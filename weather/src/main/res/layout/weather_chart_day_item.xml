<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_view"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_week"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="@color/weather_color_222222"
        android:textSize="12.67sp"
        tools:text="昨天" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:gravity="center"
        android:textColor="@color/weather_color_999999"
        android:textSize="10.67sp"
        tools:text="12/07" />

    <ImageView
        android:id="@+id/iv_day_weather"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="13dp" />

    <TextView
        android:id="@+id/tv_day_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:textColor="@color/weather_color_222222"
        android:textSize="14sp"
        tools:text="晴" />


    <com.lnkj.weather.widget.zzweatherview.TemperatureView
        android:id="@+id/ttv_day"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <ImageView
        android:id="@+id/iv_night_weather"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/tv_night_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:textColor="@color/weather_color_222222"
        android:textSize="14sp"
        tools:text="晴" />

    <TextView
        android:id="@+id/tv_wind_ori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:gravity="center"
        android:textColor="@color/weather_color_222222"
        android:textSize="11.33sp"
        tools:text="西南风" />

    <TextView
        android:id="@+id/tv_wind_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="@color/weather_color_999999"
        android:textSize="11.33sp"
        tools:text="3级" />

    <TextView
        android:id="@+id/tv_air_level"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:textColor="#fff"
        android:textSize="7.33sp"
        tools:text="良" />
</LinearLayout>
