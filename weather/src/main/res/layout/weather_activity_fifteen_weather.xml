<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.lnkj.weather.ui.fifteen.FifteenWeatherViewModel" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <FrameLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_return_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:paddingEnd="18dp"
                android:src="@mipmap/weather_icon_back_gray" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:text="15日天气预报"
                    android:textColor="@color/color_00"
                    android:textSize="@dimen/weather_sp_17" />

            </LinearLayout>

            <ImageView
                android:id="@+id/ivShare"
                android:layout_width="@dimen/weather_dp_20"
                android:layout_height="@dimen/weather_dp_20"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="10dp"
                android:src="@drawable/weather_icon_share" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_E1E1E1" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/rg_day_list_chart"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginBottom="22dp"
                    android:background="@drawable/weather_shape_day_list_chart_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_calendar_list"
                        android:layout_width="@dimen/weather_dp_80"
                        android:layout_height="match_parent"
                        android:background="@drawable/weather_secetor_calendar_chart_bg"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:text="日历"
                        android:textColor="@color/weather_select_tab_text_color"
                        android:textSize="10.67sp" />

                    <RadioButton
                        android:id="@+id/rb_day_list"
                        android:layout_width="@dimen/weather_dp_80"
                        android:layout_height="match_parent"
                        android:background="@drawable/weather_secetor_list_chart_bg"
                        android:button="@null"
                        android:gravity="center"
                        android:text="列表"
                        android:textColor="@color/weather_select_tab_text_color"
                        android:textSize="10.67sp" />

                    <RadioButton
                        android:id="@+id/rb_day_chart"
                        android:layout_width="@dimen/weather_dp_80"
                        android:layout_height="match_parent"
                        android:background="@drawable/weather_secetor_trend_chart_bg"
                        android:button="@null"
                        android:gravity="center"
                        android:text="趋势"
                        android:textColor="@color/weather_select_tab_text_color"
                        android:textSize="10.67sp" />


                </RadioGroup>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_day_list"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/weather_dp_450"
                        android:overScrollMode="never"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/rv_day_chart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <com.lnkj.weather.widget.zzweatherview.ZzWeatherView
                            android:id="@+id/zzWeatherView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:overScrollMode="never"
                            android:scrollbars="none" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_calendar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/color_99" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="1px"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="一" />

                            <View
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="@color/color_99" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="二" />

                            <View
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="@color/color_99" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="三" />

                            <View
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="@color/color_99" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="四" />

                            <View
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="@color/color_99" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="五" />

                            <View
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="@color/color_99" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="六" />

                            <View
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="@color/color_99" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="日" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/color_99" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rl_calendar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/color_99"
                            android:overScrollMode="never" />
                    </LinearLayout>

                </FrameLayout>

                <View
                    android:id="@+id/interval2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/weather_dp_6"
                    android:background="@color/weather_color_F2F2F2"
                    app:layout_constraintTop_toBottomOf="@+id/ll_15_weather" />

                <LinearLayout
                    android:id="@+id/ll_advertising1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/weather_dp_20"
                    android:background="@color/white"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/interval2">

                    <ImageView
                        android:id="@+id/iv_advertising1"
                        android:layout_width="match_parent"
                        android:layout_height="224dp"
                        android:layout_marginLeft="@dimen/weather_dp_11"
                        android:layout_marginTop="@dimen/weather_dp_16"
                        android:layout_marginRight="@dimen/weather_dp_11"
                        android:layout_marginBottom="@dimen/weather_dp_16"
                        android:scaleType="center"
                        android:src="@drawable/weather_bg_fine" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>

